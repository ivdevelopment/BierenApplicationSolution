<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BierenApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BierenApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <img src="~/images/biertempel.png" alt="logo" />
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <vc:mijn-footer footer-tekst="- De Biertempel - Hoppestraat 103 - 3360 Bierbeek - tel. 016123456 - email: info@biertempel.be - "></vc:mijn-footer>
            @*&copy; 2022 - De Biertempem - Hoppestraat 103 - 3360 Bierbeek - tel. 016123456 - email: info@biertempel.be - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
